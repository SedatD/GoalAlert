<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclerView_nextMatch_item"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/unknown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/leagueName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/flag"
        android:layout_toRightOf="@+id/flag"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="League"
        android:textColor="@color/denemeligtext"
        android:textSize="14sp"
        android:maxLines="1"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_toRightOf="@id/leagueName"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:text="Time"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/local"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="Local"
        android:layout_toRightOf="@id/startTime"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/visitor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_toRightOf="@id/local"
        android:text="Visitor"
        android:maxLines="1"
        android:textColor="@color/black"
        />

</RelativeLayout>